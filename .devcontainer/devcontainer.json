{
  "name": "capstone-llm",
  "build": {
    "dockerfile": "../.codespaces.dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "postStartCommand": {"uv": "uv sync --frozen", "acl": "sudo setfacl -m d:other:rwx /tmp"},
  "workspaceFolder": "/workspace/capstone-llm",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/capstone-llm,type=bind",
  "forwardPorts": [5555, 80],
  "portsAttributes": {
    "5555": {
      "label": "Port 5555",
      "onAutoForward": "ignore",
      "elevateIfNeeded": true
    },
    "80": {
      "label": "Port 80",
      "onAutoForward": "openBrowser",
      "elevateIfNeeded": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "tamasfe.even-better-toml",
        "ms-python.debugpy",
        "ms-python.debugpy",
        "charliermarsh.ruff"
      ]
    }
  }
}
